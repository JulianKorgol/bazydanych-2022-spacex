<div>
    {{#if privileged}}
        {{#if error}}
            <div class="alert alert-danger mt-3" role="alert">
                {{error}}
            </div>
        {{else}}
            {{#each user}}
                <h1 class="title animate__animated animate__backInDown">Szczegóły użytkownika {{this.imie}} {{this.nazwisko}}</h1>
                <p class="center animate__animated animate__backInUp">ID użytkownika: {{this.id}}</p>
            {{/each}}
            <div class="user animate__animated animate__bounceInUp">
                <table>
                    <th>ID</th>
                    <th>Imie</th>
                    <th>Nazwisko</th>
                    <th>Miejsce Zamieszkania</th>
                    <th>Specjalizacja</th>
                    <th>Rola w systemie</th>
                    <th>Szef ID</th>
                    {{#each user}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.imie}}</td>
                            <td>{{this.nazwisko}}</td>
                            <td>{{this.miasto}} {{this.kodPocztowy}} {{this.ulica}} {{this.numerDomu}} {{this.numerMieszkania}}</td>
                            <td>{{this.specjalizacja}}</td>
                            <td>{{this.rodzajUzytkownika}}</td>
                            {{#if this.SzefId}}
                                <td>{{this.SzefId}}</td>
                            {{else}}
                                <td>Brak</td>
                            {{/if}}
                        </tr>
                    {{/each}}
                </table>
            </div>
            <h2 class="center animate__animated animate__backInLeft" id="UserMissions">Misje, w których uczestniczy</h2>
            <div class="missionTable animate__animated animate__bounceInUp">
                <table>
                    <tr>
                        <th>ID</th>
                        <th>Nazwa</th>
                        <th>Opis</th>
                        <th>Status</th>
                        <th>termin Rozpoczęcia</th>
                        <th>Termin Zakończenia</th>
                        <th>Więcej szczegółów</th>
                    </tr>
                    {{#each mission}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.nazwa}}</td>
                            <td>{{this.opis}}</td>
                            <td>{{this.status}}</td>
                            <td>{{this.terminRozpoczecia}}</td>
                            <td>{{this.terminZakonczenia}}</td>
                            <td><a href="misjaSzczegoly?id={{this.id}}">Szczegóły</td>
                        </tr>
                    {{/each}}
                </table>
            </div>
            {{/if}}
    {{/if}}
</div>
<div class="text-center goBack">
    <a href="/uzytkownicy">Powrót</a>
</div>
<style>
        body {
            font-size: 15px;
        }
        h2 {
            font-size: 21px;
            font-weight: 600;
        }
        h4 {
            font-size: 18px;
            font-weight: 600;
        }
        div {
            background-color: #fefefe;
        }
        td {
            padding-left: 10px;
            padding-right: 10px;
            border: 1px solid #111;
        }

</style>